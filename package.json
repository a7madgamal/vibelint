{
  "name": "vibelint-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo for VibeLint packages",
  "type": "module",
  "scripts": {
    "build": "pnpm --filter \"{packages/*}\" build",
    "clean": "pnpm --filter \"{packages/*}\" clean",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "publish:check": "pnpm --filter \"{packages/*}\" publish --dry-run",
    "publish": "pnpm build && pnpm publish:plugin && pnpm publish:commit && pnpm publish:approval && pnpm publish:setup",
    "publish:plugin": "pnpm build && pnpm --filter @vibelint/eslint-plugin-vibelint publish --access public",
    "publish:commit": "pnpm build && pnpm --filter @vibelint/vibelint-commit publish --access public",
    "publish:approval": "pnpm build && pnpm --filter @vibelint/vibelint-wizard publish --access public",
    "publish:setup": "pnpm build && pnpm --filter lintmyvibe publish --access public",
    "version:patch": "pnpm build && pnpm -r --filter \"{packages/*}\" exec pnpm version patch",
    "version:minor": "pnpm build && pnpm -r --filter \"{packages/*}\" exec pnpm version minor",
    "version:major": "pnpm build && pnpm -r --filter \"{packages/*}\" exec pnpm version major",
    "commit": "vibelint-wizard && git add .eslint-warnings-cache.json && vibelint-commit",
    "commit-wizard": "vibelint-wizard",
    "test:wizard": "pnpm build && pnpm commit-wizard",
    "test:commit": "pnpm build && pnpm commit",
    "test:all": "pnpm build && pnpm commit-wizard && echo 'Build and wizard completed successfully'",
    "ratemyshit": "pnpm --filter ratemyshit build && node packages/ratemyshit/dist/index.js"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vibelint/eslint-plugin-vibelint": "^0.1.20",
    "@vibelint/vibelint-commit": "^0.1.20",
    "@vibelint/vibelint-wizard": "^0.1.20",
    "eslint": "^9.39.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-promise": "^7.2.1",
    "jiti": "^2.6.1",
    "prettier": "^3.7.4",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.49.0"
  }
}
